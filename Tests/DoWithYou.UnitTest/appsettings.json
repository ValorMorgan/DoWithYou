{
  "ConnectionStrings": [
    {
      "Name": "DoWithYou",
      "Connection": "Server=(localdb)\\v11.0;Initial Catalog=DoWithYouDB;Integrated Security=true;"
    }
  ],

  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Verbose"
    }
  },

  "Testing": {
    "Character": "a",
    "String": "test",
    "Boolean": false,
    "Integer": 123
  },

  "Serilog": {
    "MinimumLevel": {
      "Default": "Verbose"
    },
    "Enrich": [ "FromLogContext" ],
    "WriteTo": [
      "Console",
      "Debug"
    ],
    "Templates": [
      {
        "Name": "Constructor",
        "Format": "Constructing {Class}"
      },
      {
        "Name": "Configuring",
        "Format": "Configuring {Class}"
      },
      {
        "Name": "ConnectionType",
        "Format": "{Class} to use {ConnectionType} with {ConnectionString} connection string"
      },
      {
        "Name": "ConvertTo",
        "Format": "Converting {Value} to \"{Type}\""
      },
      {
        "Name": "DataDelete",
        "Format": "Deleting {Type}"
      },
      {
        "Name": "DataGetAll",
        "Format": "Getting all {Type}"
      },
      {
        "Name": "DataInsert",
        "Format": "Inserting {Type}"
      },
      {
        "Name": "DataMap",
        "Format": "Mapping {Table} for {Class}"
      },
      {
        "Name": "DataMapKeys",
        "Format": "Mapping {Table} Keys for {Class}"
      },
      {
        "Name": "DataMapProperties",
        "Format": "Mapping {Table} Properties for {Class}"
      },
      {
        "Name": "DataMapRelationships",
        "Format": "Mapping {Table} Relationships for {Class}"
      },
      {
        "Name": "DataMapTables",
        "Format": "Mapping table names for {Class}"
      },
      {
        "Name": "DataSaveChanges",
        "Format": "Saving Changes for {Type}"
      },
      {
        "Name": "DataUpdate",
        "Format": "Updating {Type}"
      },
      {
        "Name": "Dispose",
        "Format": "Disposing {Class}"
      },
      {
        "Name": "MigrateDown",
        "Format": "Migrating Down on {Migration}"
      },
      {
        "Name": "MigrateUp",
        "Format": "Migrating Up on {Migration}"
      },
      {
        "Name": "RegisterEvent",
        "Format": "Registering {Class} to event \"{Event}\""
      },
      {
        "Name": "RequestDelete",
        "Format": "Requested to Delete {Type}"
      },
      {
        "Name": "RequestGetDynamic",
        "Format": "Requested to Get {Type} via dynamic request"
      },
      {
        "Name": "RequestInsert",
        "Format": "Requested to Insert {Type}"
      },
      {
        "Name": "RequestSaveChanges",
        "Format": "Requested to SaveChanges for {Type}"
      },
      {
        "Name": "RequestUpdate",
        "Format": "Requested to Update {Type}"
      },
      {
        "Name": "RequestUpdateDynamic",
        "Format": "Requested to Update {Type} via dynamic request"
      }
    ]
  }
}
